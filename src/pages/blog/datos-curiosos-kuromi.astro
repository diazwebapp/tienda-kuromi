    padding: 20px;
    border-radius: 15px;
    margin-bottom: 2rem;
}

h2{
    color: var(--decorative-color);
    margin: 30px auto;
}
h3{
    color: var(--decorative-color-dark);
}

</style>
<style is:inline >
    main{
    display: grid ;
    grid-template-columns: 1fr 250px;
    gap: 20px;
    padding: 20px 0;
    max-width: 1200px;
    margin: 0 auto;
