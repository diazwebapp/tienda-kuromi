---
import { createFullUrlWithSlug } from '../utils/slugCreator'

type Props={
    title:string
    description:string
    lang?:string
    searchConsoleCode?:string
}

const {title,description,lang="es",searchConsoleCode} = Astro.props as Props

const audSlug = createFullUrlWithSlug("audifonos-de-kuromi")
const mocSlug = createFullUrlWithSlug("mochilas-bolsos-de-kuromi")
const pelSlug = createFullUrlWithSlug("peluches-de-kuromi")
---
<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
</head>
<body>
    <header>
        <div class="container" style="display: flex;justify-content:space-between;align-items:center;" >
            <a href="/" class="logo">
                <h2 class="site-name" >Mundo de Kuromi</h2>
            </a>
            <div class="btn-toggle-menu">
                <span></span>
                <span></span>
                <span></span>
                <nav class="nav-menu" >
                    <a href={mocSlug}>Mochilas de kuromi</a><a href={audSlug}>Audifonos de kuromi</a><a href={pelSlug}>Peluches de kuromi</a>
                </nav>
            </div>
        </div>
    </header>
    
    <main> <slot> </main>
    <footer></footer>
</body>
</html>

<style is:global >
    :root{
        --primary-color:#2C2C2C;
        --secondary-color:#fff;
        --decorative-color:#E6007A;
        --decorative-color-dark:#8B008B;
    }
    	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html,
	body {
		font-family: 'Poppins', sans-serif;
		width: 100%;
		background: linear-gradient(135deg, var(--decorative-color) 0%, var(--decorative-color-dark) 100%);
		color: var(--primary-color);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
	}
    h1{
        font-size: 30px;
    }

    .site-name::before{
        content: "ðŸŽ€";
    }
    body > header{
        position: sticky;
        bottom:0;
        order: 3;
        background-color: var(--secondary-color);
        z-index: 2;
    }
    body > footer{
        order: 2;
    }
    .btn-toggle-menu{
        width: 35px;
        height: 30px;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        cursor: pointer;
    }
    .btn-toggle-menu:hover span{
        background-color: var(--decorative-color-dark);
    }
    .btn-toggle-menu span{
        background:var(--primary-color);
        width: 90%;
        height: 5px;
        display: block;
        border-radius: 5px;
    }
    .btn-toggle-menu:hover nav{
        height: auto;
        bottom: 90px;
        padding: 20px 10px;
    }
    
    .nav-menu{
        position:absolute;
        min-width: 200px;
        height: 0px;
        interpolate-size: allow-keywords;
        max-height: calc(90vh - 80px);
        background-color: var(--secondary-color);
        right: 10px;
        bottom: 70px;
        border-radius: 7px;
        box-shadow: -1px -1px 3px var(--primary-color);
        transition: height .3s ease-in,
                    bottom .5s ease-in;
        overflow: auto;
    }
    .nav-menu a{
        color: var(--primary-color);
        display: block;
        padding: 10px;
        text-transform: uppercase;
        border-bottom: 1px solid var(--primary-color);
    }
	.container,section,article {
		max-width: 1200px;
		margin: 0 auto;
		padding: 20px 7px;
	}
    a{
        text-decoration: none;
        color: var(--primary-color);
    }
    .cta{
        border-radius: 1rem;
        padding: 10px;
        box-shadow: 0px 0px 3px var(--primary-color);
        color: var(--secondary-color);
        background-color: var(--decorative-color);
        display: inline-block;
        text-align: center;
        margin: 10px auto;
        font-weight: 600;
        transition: background-color .3s, box-shadow .3s ;
    }
    .cta:hover{
        background-color: var(--decorative-color-dark);
        box-shadow: 1px 2px 3px var(--primary-color);
    }
    @media (min-width: 768px) {
		.container {
			padding: 0 20px;
		}
        body > header{
            order: 1;
            top: 0;
            padding: 10px 0;
        }
        .btn-toggle-menu:hover nav{
            bottom: unset;
            height: auto;
            top: 43px;
        }
        .nav-menu{
            transition: height .3s ease-in, top .5s ease-in;
            interpolate-size: allow-keywords;
            height: 0;
            bottom: unset;
            top: 35px;
            right: 8%;
            overflow: hidden;
        }
        body > main{
            order:2;
        }
        body > footer{
            order:3;
        }
	}
</style>
